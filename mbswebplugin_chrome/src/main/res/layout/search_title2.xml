<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/search_ll"
    android:background="@color/main_system_status_bar"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:visibility="visible"
    >
    <TextView
        android:id="@+id/search_back"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/search_content"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >
        <LinearLayout
            android:id="@+id/search_view"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp">

            <ImageView
                android:layout_marginLeft="4dp"
                android:id="@+id/search_sousuo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ico_sousuo_w"
                />
            <EditText
                android:maxLines="1"
                android:id="@+id/search_editext"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColorHint="#3f3f3f"
                android:hint="@string/plase_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                />

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/search_cancel"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/title_color"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>



    </LinearLayout>

</LinearLayout>