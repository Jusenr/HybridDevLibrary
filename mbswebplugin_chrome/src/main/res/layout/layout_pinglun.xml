<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/pinglun_left"
              android:paddingTop="@dimen/pinglun_top"
              android:paddingRight="@dimen/pinglun_left"
              android:paddingBottom="@dimen/pinglun_top">

    <EditText
        android:id="@+id/edit_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/shape_pinlun"
        android:minLines="3"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/type_select_btn"
        android:text="@string/send"
        android:visibility="gone"/>
</LinearLayout>